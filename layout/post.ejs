<article class="post">
    <header class="post-header">
        <h1 class="post-title"><%= page.title %></h1>
        <div class="post-meta">
            <div class="meta-item">
                <i class="far fa-calendar-alt"></i>
                <span><%= date(page.date, 'YYYY年MM月DD日') %></span>
            </div>
            
            <% if (page.author || config.author) { %>
                <div class="meta-item">
                    <i class="far fa-user"></i>
                    <span><%= page.author || config.author %></span>
                </div>
            <% } %>
            
            <div class="meta-item">
                <i class="far fa-file-word"></i>
                <span><%= wordcount(page.content) %> 字</span>
            </div>
            
            <div class="meta-item">
                <i class="far fa-clock"></i>
                <span>预计阅读 <%= min2read(page.content) %> 分钟</span>
            </div>

            <% if (page.categories && page.categories.length) { %>
                <div class="meta-item">
                    <i class="far fa-folder"></i>
                    <% page.categories.forEach(function(category) { %>
                        <span class="category"><%= category.name %></span>
                    <% }) %>
                </div>
            <% } %>
            
            <% if (page.tags && page.tags.length) { %>
                <div class="meta-item">
                    <i class="fas fa-tags"></i>
                    <% page.tags.forEach(function(tag) { %>
                        <span class="tag"><%= tag.name %></span>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </header>
    <div class="post-content">
        <%- page.content %>
    </div>

    <footer class="post-footer">
        <% if (page.tags && page.tags.length) { %>
            <div class="post-tags">
                <i class="icon-tag"></i>
                <%- list_tags(page.tags, {
                    show_count: false,
                    class: 'tag',
                    style: 'none',
                    separator: ' '
                }) %>
            </div>
        <% } %>
    </footer>
</article>